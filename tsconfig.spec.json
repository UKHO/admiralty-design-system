{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": ["jest", "node"],
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "target": "es6",
    "allowJs": true,
    "moduleResolution": "node"
  },
  "include": ["**/*.spec.ts", "**/*.d.ts"]
}
