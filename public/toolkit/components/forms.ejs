<div class="tab-set">
    <%- partial('../../_partials/tabs', { id: 'text-disabled' }) %>
    <%- partial('../../_partials/inputtext-disabled', { id: 'text-input-disabled' }) %>
</div>

<h6>Validated</h6>
<div class="tab-set">
    <%- partial('../../_partials/tabs', { id: 'text-validated' }) %>
