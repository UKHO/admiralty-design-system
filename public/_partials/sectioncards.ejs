<%
// required parameter: { folder: 'folder-name' }

var cards = [];

var sectionInfo = public[folder]._data;
console.log({ folder, sectionInfo });
var subsections = sectionInfo.meta.folders;

for (var idx1 = 0; idx1 < subsections.length; idx1++) {
    var subsectionName = subsections[idx1];
    var subsectionInfo = public[folder][subsectionName]._data.index;
    cards.push({
        name: subsectionName,
        title: subsectionInfo.title,
        order: subsectionInfo.order || 99,
        url: '/' + (subsectionInfo.url || (folder + '/' + subsectionName)),
        description: subsectionInfo.description
    });
}
%>
<%- partial('./cards', { cards }) %>
