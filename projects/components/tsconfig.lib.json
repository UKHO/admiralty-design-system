{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../out-tsc/lib",
    "target": "es2015",
    "declaration": true,
    "inlineSources": true,
    "types": ["node"],
    "lib": ["dom", "es2018"],
    "emitDecoratorMetadata": true
  },
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "enableResourceInlining": true,
    "enableIvy": false
  },
  "exclude": ["src/test.ts", "**/*.spec.ts"]
}
